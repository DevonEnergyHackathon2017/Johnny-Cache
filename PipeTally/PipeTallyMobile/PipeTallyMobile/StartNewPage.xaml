<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PipeTallyMobile.StartNewPage">
    <ContentPage.Content>

        <StackLayout>

            <Label  Text="Enter details for the whole batch of casing" />

            <Label Text="OD:" Style="{StaticResource entryLabel}"></Label>
            <Entry x:Name="txtOD" Keyboard="Numeric" Completed="txtOD_Completed" />

            <Label Text="Weight:" Style="{StaticResource entryLabel}"></Label>
            <Entry x:Name="txtWeight" Keyboard="Numeric" Completed="txtWeight_Completed" />

            <Label Text="Grade:" Style="{StaticResource entryLabel}"></Label>
            <Entry x:Name="txtGrade" Completed="txtGrade_Completed"/>

            <Label Text="ID:" Style="{StaticResource entryLabel}"></Label>
            <Entry x:Name="txtID" Keyboard="Numeric" Completed="txtID_Completed"/>

            <Label Text="Top Thread:" Style="{StaticResource entryLabel}"></Label>
            <Entry x:Name="txtThread" Completed="txtThread_Completed" />

            <Button Grid.Row="6" Grid.ColumnSpan="2" HeightRequest="60"
                    Text="Start Measuring"
                    BackgroundColor="DarkGreen"
                    TextColor="White"
                    Clicked="OnStartMeasure"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>